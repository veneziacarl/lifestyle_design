<div class="row">
  <%= form_for [@goal] do |f| %>
    <% if @goal.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@goal.errors.count, "error") %>: please correct the following and try again.</h4>
      <ul>
        <% @goal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <fieldset class="large-6 columns">
      <legend>Pick a color for the goal's logo</legend>
      <%= f.radio_button :color, '#D4002E', :checked => true %>
      <%= label :color, 'Red' %>
      <%= f.radio_button :color, '#00bcd4' %>
      <%= label :color, 'Blue' %>
      <%= f.radio_button :color, '#D45E00' %>
      <%= label :color, 'Orange' %>
    </fieldset>

    <div class="actions">
      <%= f.submit 'Add Goal', class: 'button'%>
    </div>
  <% end %>
</div>
